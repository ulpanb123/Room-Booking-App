<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Body1TextStyle">
        <item name="fontFamily">@font/sf_pro</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Body2TextStyle">
        <item name="fontFamily">@font/sf_pro</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Button1TextStyle">
        <item name="fontFamily">@font/sf_pro</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="Heading1TextStyle">
        <item name="android:fontFamily">@font/sf_pro</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Heading2TextStyle">
        <item name="android:fontFamily">@font/sf_pro</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ActionBarTitleTextStyle" parent="Heading2TextStyle">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Heading3TextStyle">
        <item name="android:fontFamily">@font/sf_pro</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Header4">
        <item name="fontFamily">@font/sf_pro</item>
        <item name="android:textSize">16dp</item>
        <item name="titleCentered">true</item>
        <item name="color">#000000</item>
    </style>

    <style name="Heading5RegularTextStyle">
        <item name="android:fontFamily">@font/sf_pro</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="WithRadiusShapeableImageView" parent="">
        <item name="cornerSize">10%</item>
    </style>



    <style name="circledShapeableImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ThinnerChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipCornerRadius">4dp</item>
        <item name="chipMinHeight">16dp</item>
        <item name="android:textAppearance">@style/Heading5RegularTextStyle</item>
        <item name="chipBackgroundColor">@color/colorGrayBg</item>
        <item name="ensureMinTouchTargetSize">false</item>
    </style>

    <style name="FacilitiesChip" parent="ThinnerChip">
        <item name="android:padding">4dp</item>
    </style>


</resources>